<div class="container-fuid">
  <div class="row row-cols-4 d-flex justify-content-evenly">
  <div>
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
<div> <p>
    <input type="text" id="comment-desc">
    <button class="btn btn-primary" data-postid="{{id}}" data-userid="{{user_id}}">Comment</button>
  </p>
  <p>
    {{#each comments as |comment| }}
    <div class="card">
      <div class="card-body">
        <div class="card-text">
          {{format_date comment.date_created}}: {{user.name}} <br> "{{comment.description}}"
        </div>
      </div>
    </div>
    {{/each}}
  </p>
  </div>
 
  </div>
</div>
</div>
</div>
<script src="/js/comment.js"></script>